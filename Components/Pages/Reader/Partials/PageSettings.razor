    <NavigationSettings/>
    <TextSetting Label="@Translations.VERTICAL_MARGIN" Min="0" Max="10" Increment="0.5" @bind-Value="ReaderService.ProfileSettings.VerticalMargin"/>
    <TextSetting Label="@Translations.HORIZONTAL_MARGIN" Min="0" Max="10" Increment="0.5" @bind-Value="ReaderService.ProfileSettings.HorizontalMargin"/>
</div>

@code {
    [Inject] private ReaderService ReaderService { get; set; } = null!;
}