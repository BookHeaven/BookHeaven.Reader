@page "/books/remote"
@using BookHeaven.Reader.Components.Pages.Remote.Partials
@layout BooksLayout

@if (!_canConnect)
{
    <Message Content="@Translations.CONNECTION_FAILED" ExtraInfo="@AppStateService.ServerUrl" OnButtonClick="@OnButtonClick">
        <ButtonContent>
            <i class="bi bi-arrow-clockwise"></i> @Translations.RETRY
        </ButtonContent>
    </Message>
    return;
}
<div class="flex flex-col h-full bg-[lightgray]">
    <div class="my-2 ms-3">
        <div class="flex items-center gap-3">
            <div class="col-auto">
                <select @bind="@_selectedFilter" @bind:after="FilterChanged" class="form-select">
                    <option value="@Filters.All" selected>@Translations.ALL_M</option>
                    <option value="@Filters.Author">@Translations.BY_AUTHOR</option>
                    <option value="@Filters.Missing">@Translations.BY_MISSING</option>
                </select>
            </div>
            @if (_selectedFilter == Filters.Author && _authors is { Count: > 0 })
            {
                <div class="col-auto">
                    <select @bind="@_selectedAuthor" @bind:after="FilterChanged" class="form-select">
                        @foreach (var author in _authors!)
                        {
                            <option value="@author.AuthorId">@author.Name</option>
                        }
                    </select>
                </div>
            }
        </div>
    </div>
    <div class="flex-1 overflow-hidden">
        @if (_filteredBooks == null)
        {
            <Message Content="@Translations.LOADING"/>
        }
        else if (_filteredBooks.Count == 0)
        {
            <Message Content="@Translations.BOOKS_NO_FILTER_MATCH"/>
        }
        else
        {
            <div class="grid grid-cols-1 xs:grid-cols-2 grid-rows-6 xs:grid-rows-3 gap-2 px-2 h-full">
                @foreach (var book in CurrentPageBooks)
                {
                    <RemoteBook Book="@book" ServerService="@ServerService" OnBookDownloaded="FilterBooks"/>
                }
            </div>
        }
    </div>
    @if (_filteredBooks != null)
    {
        <div class="flex justify-center">
            <Pagination
                ItemCount="@_filteredBooks?.Count"
                ItemsPerPage="ItemsPerPage"
                @bind-CurrentPage="_currentPage" />
        </div>
        
    }
   
</div>


