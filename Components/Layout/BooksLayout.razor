@inherits LayoutComponentBase
@layout MainLayout
@inject NavigationManager NavigationManager
<SectionContent SectionName="Header">
    <Header>
        <nav class="flex h-full flex-row items-stretch justify-center">
            <NavLink class="flex items-center px-4 border-neutral-300 border-r-2 [&.active]:border-b-2 [&.active]:border-b-black" href="@Urls.Books" ActiveClass="active" Match="NavLinkMatch.All">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1"  stroke-linecap="round"  stroke-linejoin="round"  class="me-2 icon icon-tabler icons-tabler-outline icon-tabler-device-ipad"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 3a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2z" /><path d="M9 18h6" /></svg>
                @Translations.LOCAL
            </NavLink>
            <NavLink class="flex items-center px-4 border-neutral-300 border-r-2 [&.active]:border-b-2 [&.active]:border-b-black" href="@Urls.Remote" ActiveClass="active" Match="NavLinkMatch.All">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1"  stroke-linecap="round"  stroke-linejoin="round"  class="me-2 icon icon-tabler icons-tabler-outline icon-tabler-cloud"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6.657 18c-2.572 0 -4.657 -2.007 -4.657 -4.483c0 -2.475 2.085 -4.482 4.657 -4.482c.393 -1.762 1.794 -3.2 3.675 -3.773c1.88 -.572 3.956 -.193 5.444 1c1.488 1.19 2.162 3.007 1.77 4.769h.99c1.913 0 3.464 1.56 3.464 3.486c0 1.927 -1.551 3.487 -3.465 3.487h-11.878" /></svg>
                @Translations.SERVER
            </NavLink>
        </nav>
        <div class="ms-auto flex">
            <ProfileButton />
            <ContextMenuTrigger MenuId="ThreeDotsMenu" MouseButtonTrigger="MouseButtonTrigger.Left">
                <Button>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-dots-vertical"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"/><path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"/><path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"/></svg>
                </Button>
            </ContextMenuTrigger>
            <ContextMenu Id="ThreeDotsMenu" OverrideDefaultCssClass="fixed border-s border-b border-black bg-white !top-[40px] !left-auto !right-0">
                <Item OnClick="@(() => NavigationManager.NavigateTo(Urls.Settings))">@Translations.SETTINGS</Item>
                <Item OnClick="@BackupProfile">Backup profile</Item>
                <Item OnClick="@SyncProgress">@Translations.SYNC_PROGRESS</Item>
            </ContextMenu>
        </div>
    </Header>
</SectionContent>
@Body