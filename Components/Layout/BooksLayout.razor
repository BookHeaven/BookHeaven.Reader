@inherits LayoutComponentBase
@layout MainLayout
@inject NavigationManager NavigationManager
<SectionContent SectionName="Header">
    <Header>
        <nav class="flex h-full flex-row items-stretch justify-center">
            <NavLink href="/books" ActiveClass="active" Match="NavLinkMatch.All">
                <span class="flex items-center"><i class="bi bi-tablet me-2 text-xl"></i> @Translations.LOCAL</span>
            </NavLink>
            <NavLink href="/books/remote" ActiveClass="active" Match="NavLinkMatch.All">
                <span class="flex items-center"><i class="bi bi-cloud me-2 text-xl"></i> @Translations.SERVER</span>
            </NavLink>
        </nav>
        <div class="ms-auto flex">
            <div class="relative inline-block">
                <ContextMenuTrigger MenuId="ThreeDotsMenu" MouseButtonTrigger="MouseButtonTrigger.Left">
                    <Button>
                        <i class="bi bi-three-dots-vertical"></i>
                    </Button>
                </ContextMenuTrigger>
                <ContextMenu Id="ThreeDotsMenu" OverrideDefaultCssClass="absolute border bg-white !inset-y-auto !left-auto !right-0">
                    <Item OnClick="@(() => NavigationManager.NavigateTo("/settings"))">@Translations.SETTINGS</Item>
                    <Item OnClick="@BackupProfile">Backup profile</Item>
                    <Item OnClick="@SyncProgress">@Translations.SYNC_PROGRESS</Item>
                </ContextMenu>
            </div>
        </div>
    </Header>
</SectionContent>
@Body